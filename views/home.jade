extends layout

block content
  .container
    .row
      .col-sm-6.col-md-6.col-md-offset-3
        #user
          h1.text-center.login-title Welcome #{user.firstName}
            .signup-wall
              .row
                .col-xs-6
                  p Username
                  p First Name
                  p Last Name
                  p Email
                .col-xs-6
                  p #{user.username}
                  p #{user.firstName}
                  p #{user.lastName}
                  p #{user.email}
            a(href='/logout', class='text-center new-account') Sign Out